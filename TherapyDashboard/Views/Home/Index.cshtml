@model TherapyDashboard.ViewModels.MultiPatientViewModel
@{
    ViewBag.Title = "Home Page";
}

<head>
    <style>
        .center {
            display: block;
            margin-left: auto;
            margin-right: auto;
            height: 50%;
        }
    </style>
</head>

<div style="height: 700px">

    <div>
        <h2>Table data</h2>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Current module</th>
                    <th scope="col">Task status</th>
                    <th scope="col">Flags</th>
                    <th scope="col">Summary</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var pat in Model.patients)
                {
                    <tr class="table-active">
                        <th scope="row">
                            <a href="@Url.Action("" + pat.id, "Patient" )" class="elements">
                                <span>@pat.name</span>
                            </a>
                        </th>
                        <td>
                            @{ var module = pat.id % 8;}
                            @module
                        </td>

                        <td>
                            @{ if (pat.id % 4 == 0)
                                {
                                    <span>Delayed 2 days</span>
                                }
                                else if (pat.id % 3 == 1)
                                {
                                    <span>Due in 2 days</span>
                                }
                                else
                                {
                                    <span>Delivered</span>
                                }
                            }
                        </td>

                        <td>
                            @{ if (pat.id % 8 == 0)
                                {
                                    <span>Redusert nattesøvn</span>
                                }
                                else if (pat.id % 8 == 1)
                                {
                                    <span>Svekket appetitt</span>
                                }
                                else
                                {
                                    <span></span>
                                }
                            }
                        </td>

                        <td>
                            @{ if (pat.id % 8 == 2 || pat.id % 8 == 3)
                                {
                                    <span>Improving</span>
                                }
                                else if (pat.id % 8 == 1)
                                {
                                    <span>Declining</span>
                                }
                                else
                                {
                                    <span>Steady</span>
                                }
                            }
                        </td>

                    </tr>
                }
        </table>
    </div>

</div>