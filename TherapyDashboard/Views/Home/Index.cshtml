@model TherapyDashboard.ViewModels.MultiPatientViewModel
@{
    ViewBag.Title = "Home Page";
}

<head>
    <style>
        .center {
            display: block;
            margin-left: auto;
            margin-right: auto;
            height: 50%;
        }

        #piechart {
            width: 30%;
            float: left;
        }

        #barchart {
            width: 30%;
            float: left;
        }

        #selectedPatients {
            width: 30%;
            float: left;
            margin-left: 100px;
        }
    </style>

    <script src="https://code.highcharts.com/highcharts.js"></script>
    <script src="https://code.highcharts.com/highcharts-more.js"></script>
</head>

<div style="height: 700px">
    <div style="height: 10px;"></div>
    <div style="height: 300px">
        <div id="piechart" style="height: 100%;"></div>
        <div id="barchart" style="height: 100%;"></div>

        <div id="selectedPatients" style="height: 100%;">
            <h4>Urgent/warning</h4>

            <table class="table table-hover table-striped">
                <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Reason</th>
                    </tr>
                </thead>
                <tbody>
                    @for (var i = 0; i < 4; i++)
                    {
                        <tr class="table-active">
                            <td scope="row">
                                <a href="@Url.Action("" , "Patient" )" class="elements">
                                    <span>@Model.patients[i].name</span>
                                </a>
                            </td>
                            <td>
                                @{ if (i < 2)
                                    {
                                        <span>Suicidal 5-6</span>
                                    }
                                    else if (i < 3)
                                    {
                                        <span>Tristhet +4</span>
                                    }
                                    else
                                    {
                                        <span>Depr. tankeinnhold +3</span>
                                    }
                                }
                            </td>
                        </tr>
                    }

            </table>
        </div>
    </div>

    <script src="~/Scripts/Custom/PieChart.js"></script>
    <script src="~/Scripts/Custom/BarChart.js"></script>

    <div>
        <h2>Your patients</h2>

        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Current module</th>
                    <th scope="col">Task status</th>
                    <th scope="col">Flags</th>
                    <th scope="col">Summary</th>
                    <th scope="col">Last login</th>
                    <th scope="col">Last checked</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var pat in Model.patients)
                {
                    <tr class="table-active">
                        <th scope="row">
                            <a href="@Url.Action("" + pat.id, "Patient" )" class="elements">
                                <span>@pat.name</span>
                            </a>
                        </th>
                        <td>
                            @{ var module = pat.id % 8;}
                            @module
                        </td>

                        <td>
                            @{ if (pat.id % 4 == 0)
                                {
                                    <span>Delayed 2 days</span>
                                }
                                else if (pat.id % 3 == 1)
                                {
                                    <span>Due in 2 days</span>
                                }
                                else
                                {
                                    <span>Delivered</span>
                                }
                            }
                        </td>

                        <td>
                            @{ if (pat.id % 8 == 0)
                                {
                                    <span>Redusert nattesøvn</span>
                                }
                                else if (pat.id % 8 == 1)
                                {
                                    <span>Svekket appetitt</span>
                                }
                                else
                                {
                                    <span></span>
                                }
                            }
                        </td>

                        <td>
                            @{ if (pat.id % 8 == 2 || pat.id % 8 == 3)
                                {
                                    <span>Improving</span>
                                }
                                else if (pat.id % 8 == 1)
                                {
                                    <span>Declining</span>
                                }
                                else
                                {
                                    <span>Steady</span>
                                }
                            }
                        </td>

                        <td>@pat.id days</td>
                        <td>@pat.id hours</td>

                    </tr>
                }
        </table>
    </div>

</div>