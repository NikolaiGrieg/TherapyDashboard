@model TherapyDashboard.Models.Patient

<head>
    <script src="https://code.highcharts.com/highcharts.js"></script>
    <script src="https://code.highcharts.com/highcharts-more.js"></script>

    <style>
        .line {
            height: 90%;
            width: 70%;
            float: right;
        }

        .background {
            width: 250px;
            float: left;
        }

        .forms {
            width: 200px;
            float: left;
        }

        .oppgaver {
            width: 200px;
            float: right;
        }

        body {
            overflow: hidden;
            position: relative
        }

        .spider {
            min-width: 300px;
            max-width: 800px;
            height: 300px;
            margin: 1em auto;
        }

        .polar {
            width: 50%;
            height: 250px;
            margin: 0 auto;
            float: right;
        }

        #spiderchart {
            position: fixed;
            display: none;
            width: 100%;
            height: 60%;
            margin-top: 10%;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: rgba(0,0,0,0.5);
            z-index: 2;
            cursor: pointer;
            border: solid;
            border-width: thin;
        }
        #activitychart {
            height: 90%;
            width: 70%;
            float: right;
        }


    </style>
</head>
<body>
    <h2 style="margin-left: 40%">@Model.name</h2>
    <div style="width: auto; height: 250px;  width: 100%;">
        <img src="~/Images/DefaultPerson.png" alt="Person picture" style="width:auto; height: 90%; float: left;">
        <div id="linechart" class="line"></div>
    </div="width:>
    

    <div style="width: 100%; height: 300px; float:left; margin-top: 2%">
        <div class="background">

            <table class="table table-hover table-striped">
                <tbody>
                    @foreach (var entry in Model.background)
                {
                    <tr class="table-active">
                        <th scope="row">
                            <span>@entry.Key</span>
                        </th>
                        <td scope="row">
                            <span>@entry.Value</span>
                        </td>
                    </tr>
            }

            </table>
        </div>
        <div id="activitychart"></div>
    </div>
    <div id="spiderchart" class="spider" onclick="off()"></div>

    <script>
        function off() {
            document.getElementById("spiderchart").style.display = "none";
        }
    </script>


    <script src="~/Scripts/Custom/DetailView/HCLineChart.js"></script>
    <script src="~/Scripts/Custom/DetailView/HCSpiderChart.js"></script>
    <script src="~/Scripts/Custom/DetailView/ActivityChart.js"></script>


    <div style="height: 250px; width: 50%; float:right; display: inline-block">
        <div class="forms">
            <h4>Other measurements</h4>

            <table class="table table-hover table-striped">
                <tbody>
                    @foreach (var f in Model.forms)
                {
                    <tr class="table-active">
                        <td scope="row">
                            <a href="@Url.Action("" , "Patient" )" class="elements">
                                <span>@f</span>
                            </a>
                        </td>
                    </tr>
            }

            </table>
        </div>



        <div class="oppgaver">
            <h4>Received documents</h4>

            <table class="table table-hover table-striped">
                <tbody>
                    @foreach (var entry in Model.tasks)
                        {
                            <tr class="table-active">
                                <td scope="row">
                                    <a href="@Url.Action("" , "Patient" )" class="elements">
                                        <span>@entry</span>
                                    </a>
                                </td>
                                <td scope="row">
                                    <span>Opened</span>
                                </td>
                            </tr>
                        }
            </table>
        </div>
    </div>
</body>


